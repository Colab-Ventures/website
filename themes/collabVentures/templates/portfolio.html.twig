{% embed 'partials/base.html.twig' %}

    {% set collection = page.collection() %}

    {% block content %}
        <main class="wrapper page-title">

            {% include 'partials/navigation.html.twig' %}

            <div class="m-right-panel m-page scene_element scene_element--fadeinup">
                <section class="content-med tb-offset et-page" id="page-1" data-et-id="1">
                    <!-- content -->
                    {#<header class="wow fadeInUp" data-wow-delay="0.25s">#}
                        {#<h1>Portfolio</h1>#}
                    {#</header>#}
                    <div class="box-grid">
                        <div class="box-grid__box box-grid__box--media wow fadeInDown" data-wow-delay="0.35s">
                            <a target="_blank" title="Click to visit Demobox website" href="http://demobox.co"><img src="{{ url('theme://images/portfolio-demobox.jpg') }}" alt="Demobox"/></a>
                        </div>
                        <div class="box-grid__box box-grid__box--text wow fadeInUp" data-wow-delay="0.35s">
                            <span>
                                DemoBox is a  platform which connects the world of unsinged & emerging music.DemoBox monitors the data of over 4M artists and 20M data points each day. <br/><br/>

                                Supported by PayPal’s Start Tank Accelerator, UKTI &  The AIM (the Association of Independent Music).<br/><br/>

                                Technology: PHP, AngularJS, Symfony 2
                            </span>
                        </div>
                        <div class="box-grid__box box-grid__box--text wow fadeInLeft" data-wow-delay="0.45s">
                            <span>
                                Mavyn is a micro-consulting marketplace for entrepreneurs and SME’s who can’t traditionally access the best business consultants in the world.<br/><br/>

                                Clients can book bitesize consultations with the best in their field for tailored, useable business advice of any type.<br/><br/>

                                Technology: PHP, AngularJS, Symfony 2
                            </span>
                        </div>
                        <div class="box-grid__box box-grid__box--media wow fadeInRight" data-wow-delay="0.45s">
                            <img src="{{ url('theme://images/portfolio-mavyn.jpg') }}" alt="Mavyn"/>
                        </div>
                        <div class="box-grid__box box-grid__box--media wow fadeInUp" data-wow-delay="0.55s">
                            <img src="{{ url('theme://images/portfolio-equify.jpg') }}" alt="Equify"/>
                        </div>
                        <div class="box-grid__box box-grid__box--text wow fadeInUp" data-wow-delay="0.55s">
                            <span>
                                Equify allows businesses to pay for skills and services via equity in their companies.<br/><br/>

                                It is the ideal solution for start ups to grow without large capital investment as our system makes it simple and fast to pay for services (or anything else!) using equity.<br/><br/>

                                Equify will be launching Q3 of 2016.
                            </span>
                        </div>
                    </div>
                </section>
            </div>
        </main>
    {% endblock %}

{% endembed %}
